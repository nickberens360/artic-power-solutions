---
interface Props {
  id?: string;
  title?: string;
  class?: string;
  innerRounded?: boolean;
}

const { id, title, class: className, innerRounded } = Astro.props;
---

<section
    id={id}
    class:list={["section-block mx-4 py-12 md:py-12 bg-slate-950", className]}
>
  <div
    class:list={[
      "section-block__inner max-w-[1200px] mx-auto px-4",
      { "rounded-xl bg-gray-800 py-8 px-4": innerRounded },
    ]}
  >
    {title && <h2 class="text-3xl font-bold text-center mb-12 text-white">{title}</h2>}
    <slot />
  </div>
</section>