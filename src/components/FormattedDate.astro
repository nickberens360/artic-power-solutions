---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---
<style>
  .date {
      color: #FC5252FF;
  }
</style>
<time class="date text-red" datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
