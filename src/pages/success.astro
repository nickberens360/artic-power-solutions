---
import Layout from '../layouts/Layout.astro';
import {SITE_DESCRIPTION, SITE_TITLE} from "../consts";
---
<!DOCTYPE html>
<Layout
    title={SITE_TITLE}
    description={SITE_DESCRIPTION}
>
<main class="min-h-screen flex items-center justify-center text-center py-16 md:py-24 bg-[radial-gradient(ellipse_at_center,theme(colors.gray.700)_0%,theme(colors.gray.900)_100%)]">
  <div class="container mx-auto px-6">
    <div class="max-w-2xl mx-auto bg-gray-900 p-8 md:p-12 rounded-xl shadow-2xl">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">Thank You!</h1>
      <p class="text-lg text-white mb-8">
        Your message has been sent successfully. We will get back to you shortly.
      </p>
      <a href="/" class="inline-block py-3 px-6 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition duration-300">
        Return to Homepage
      </a>
    </div>
  </div>
</main>
</Layout>
