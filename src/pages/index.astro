---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ContentCard from '../components/ContentCard.astro';
import CalloutBox from '../components/CalloutBox.astro';
import {Image} from 'astro:assets';
import articLogoIcon from '../assets/aps-icon-white.png';
import {SITE_TITLE, SITE_DESCRIPTION} from '../consts';
import {getCollection} from 'astro:content';
import SectionBlock from "../components/SectionBlock.astro";
import ImageWithContent from "../components/ImageWithContent.astro";
---

<Layout
    title={SITE_TITLE}
    description={SITE_DESCRIPTION}
>
  <Hero
      title="NIC-CAD 24V Battery Replacements for Appleton Roll Movers™"
      tagline="Keep your RollMover™ running — even after Appleton’s discontinuation of NIC-CAD 24V batteries. Artic Power Solutions provides reliable, high-quality replacements to minimize downtime and keep your operations moving!"
      buttonText="Get a Free Quote"
      buttonUrl="#contact"
      disclaimerText="Artic Power Solutions is an independent service provider. RollMover™ is a trademark of Appleton Mfg. We are not affiliated with Appleton Mfg."
      imageUrl="https://images.unsplash.com/photo-1727517786578-ff2bb896b852?q=80&w=2842&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
  />
  <main>
    <SectionBlock
        innerRounded
    >
      <Fragment>
        <ImageWithContent />
      </Fragment>
    </SectionBlock>

    <SectionBlock>
      <Fragment>
        <div>
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">The Artic Power Solutions Advantage</h2>
          </div>

          <CalloutBox/>

          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <ContentCard
                title="Direct-Fit Replacements"
                description="Our NIC-CAD 24V batteries are engineered to match original Appleton specifications, ensuring seamless installation with no modifications required."
            />
            <ContentCard
                title="Rapid Delivery"
                description="Minimize downtime with fast shipping options to get your RollMover back in operation as quickly as possible."
            />
            <ContentCard
                title="Affordable Solutions"
                description="Restore your equipment’s performance for less than the cost of a new system, with competitive pricing on high-quality batteries."
            />
            <ContentCard
                title="Nationwide Support"
                description="We proudly supply RollMover owners across the country, backed by responsive customer service and expert technical assistance."
            />

          </div>
        </div>
        <div class="text-center mt-6">
          <a
              href="#contact"
              class="mt-8 inline-block bg-red-500 hover:bg-red-600 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition-all duration-300 ease-in-out transform hover:scale-105"
          >
            Request a Quote
          </a>
        </div>
      </Fragment>
    </SectionBlock>


    <SectionBlock innerRounded>
      <Fragment>
        <div class="flex flex-wrap items-center -mx-4">
          <div class="w-full md:w-1/3 px-8 mb-8 md:mb-0 text-center ">
            <Image
                src={articLogoIcon}
                alt="Artic Power Solutions Logo"
                class="rounded-full shadow-xl w-48 h-48 mx-auto"
            />
          </div>
          <div class="w-full md:w-2/3 px-4">
            <div class="mb-12">
              <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">About Artic Power Solutions</h2>
            </div>
            <p class="text-lg text-white">
              <strong>Artic Power Solutions is your trusted independent partner for material handling equipment
                repair.</strong> We were founded on the principle that businesses need a reliable, expert alternative to
              slow and costly OEM service.
            </p>
            <p class="text-lg text-white mb-4">
              Our team has deep, hands-on experience with the specific machinery used in the paper, converting, and
              nonwovens industries. We understand the critical nature of your equipment and are committed to providing
              solutions that are not only effective but also make financial sense.
            </p>
            <p class="text-lg text-white">
              We proudly serve clients nationwide, offering specialized repair services and a comprehensive catalog of
              compatible parts to keep your operations moving.
            </p>
            <div class="text-left">
              <a
                  href="/#contact"
                  class="mt-8 inline-block bg-red-500 hover:bg-red-600 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition-all duration-300 ease-in-out transform hover:scale-105"
              >
                Request a Quote
              </a>
            </div>
          </div>
        </div>
      </Fragment>
    </SectionBlock>

  </main>
</Layout>
