---
import Layout from '../layouts/Layout.astro';
const shopDomain = import.meta.env.PUBLIC_SHOPIFY_STORE_DOMAIN;
---

<Layout
    title="Your Shopping Cart"
    description="Items in your shopping cart."
>
  <main data-shop-domain={shopDomain}>
    <h1>Your Cart</h1>
    <div id="cart-container">
      <p>Loading cart...</p>
    </div>
  </main>

  <script>
    // Redirect to home page and open cart drawer if JavaScript is enabled
    document.addEventListener('DOMContentLoaded', () => {
      if (typeof window.openCartDrawer === 'function') {
        window.openCartDrawer();
        // Optional: redirect to home page after opening the drawer
        // window.location.href = '/';
      }
    });
  </script>
</Layout>
