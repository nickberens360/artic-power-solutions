---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './Layout.astro'; // Using the same base layout as the blog
import { Image } from 'astro:assets';

type Props = CollectionEntry<'parts'>['data'];

const { title, description, partNumber, heroImage } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article>
    <div class="w-full pt-7">
      {heroImage && <Image width={1020} height={510} src={heroImage} alt={`Hero image for ${title}`} class="block mx-auto rounded-xl shadow-lg" />}
    </div>
    <div class="w-[720px] max-w-[calc(100%-2em)] mx-auto p-4 text-white">
      <div class="mb-4 py-4 text-center leading-none">
        <div class="italic text-gray-400 mb-2">Part #: {partNumber}</div>
        <h1 class="mt-0 mb-2">{title}</h1>
        <p>{description}</p>
        <hr />
      </div>
      <div class="[&>h1]:mt-6 [&>h2]:mt-6 [&>h3]:mt-6 [&>h4]:mt-6 [&>h5]:mt-6 [&>h6]:mt-6">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>
