---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './Layout.astro'; // Using the same base layout as the blog
import { Image } from 'astro:assets';

type Props = CollectionEntry<'parts'>['data'];

const { title, description, partNumber, heroImage } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <style>
    /* Styles are now consistent with BlogPost.astro */
    main {
      width: calc(100% - 2em);
      max-width: 100%;
      margin: 0;
    }
    .hero-image {
      width: 100%;
      padding: 0 16px;
    }
    .hero-image img {
      display: block;
      margin: 0 auto;
      border-radius: 12px;
      box-shadow: var(--box-shadow);
    }
    .prose {
      width: 720px;
      max-width: calc(100% - 2em);
      margin: auto;
      padding: 1em;
      color: white;
    }
    .title {
      margin-bottom: 1em;
      padding: 1em 0;
      text-align: center;
      line-height: 1;
    }
    .title h1 {
      margin: 0 0 0.5em 0;
    }
    .part-number {
      font-style: italic;
      color: #a0a0a0;
      margin-bottom: 0.5em;
    }
    h1, h2, h3, h4, h5, h6 {
      margin-top: 24px !important;
    }
  </style>
  <article>
    <div class="hero-image pt-7 mt-8">
      {heroImage && <Image width={720} height={360} src={heroImage} alt={title} />}
    </div>
    <div class="prose">
      <div class="title">
        <div class="part-number">Part #: {partNumber}</div>
        <h1>{title}</h1>
        <p>{description}</p>
        <hr />
      </div>
      <slot />
    </div>
  </article>
</BaseLayout>
